nqmx=$1
shift
for i in $* ; do
   list=$list.$i
done
fichdim=dimensions${list}.t${nqmx}


if [ ! -f $fichdim ] ; then
# si le fichier de dimensions n'existe pas, on le cree

echo $#
if [ $# -ge 3 ] ; then
   im=$1
   jm=$2
   lm=$3
   n2=$1
   ndm=1

#  while [ "$n2" -gt 2 ]; do
#      n2=`expr $n2 / 2`
#     ndm=`expr $ndm + 1`
#   done
#   if [ "$n2" != 2 ] ; then
#      echo le nombre de longitude doit etre une puissance de 2
#      exit
#   fi

echo $#
    if [ $# -ge 2 ] ; then
      im=1
       jm=$1
      lm=$2
      ndm=1
      else if [ $# -ge 1 ] ; then
         im=1
         jm=1
         lm=$1
         ndm=1
      else
         echo il faut au moins une dimension
         exit
      fi
    fi
fi

cat << EOF > $fichdim
