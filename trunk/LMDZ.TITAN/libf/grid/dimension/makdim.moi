      INTEGER iim,jjm,llm,ndm

      PARAMETER (iim= $im,jjm=$jm,llm=$lm,ndm=$ndm)

      integer nqmx
      parameter (nqmx=$nqmx)

c-----------------------------------------------------------------------
EOF
fi

\rm ../dimensions.h
tar cf - $fichdim | ( cd .. ; tar xf - ; mv $fichdim dimensions.h )
