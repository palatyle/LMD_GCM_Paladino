&share
 wrf_core = 'ARW',
 max_dom = 3
 start_date = '2024-02-64_06:00:00','2024-02-64_06:00:00','2024-02-64_06:00:00'
 end_date   = '2024-03-02_06:00:00','2024-02-64_06:00:00','2024-02-64_06:00:00'
 interval_seconds = 3700
 io_form_geogrid = 2,
 debug_level = 0,
 opt_output_from_geogrid_path='../geogrid/'
