 e_we              =      177,    181,    181
 e_sn              =      177,    181,    181
 geog_data_res     =  'tyler','tyler','tyler'
 dx = 54000,
 dy = 54000,
 map_proj = 'polar',      !! map projection: 'mercator', 'lambert' or 'polar'
 ref_lat   =  89.5,       !! north latitude of the center of the domain
 ref_lon   =  0.1,        !! east longitude of the center of the domain
 truelat1  =  89.5,       !! (lambert or polar) lat position of projection cone
 truelat2  =  0.0,        !!   [do not modify]
 stand_lon =  0.1,        !! (lambert or polar) lon position of projection cone
 geog_data_path = '../data_static/',
 OPT_GEOGRID_TBL_PATH = '../geogrid/'
/

&metgrid
 fg_name = '../prep/WPSFEED/LMD'
